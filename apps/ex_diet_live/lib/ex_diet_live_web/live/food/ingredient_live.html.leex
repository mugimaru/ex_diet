<div class="row">
  <div class="col-sm-12 col-xl-8">
  <form  phx-change="filter">
    <div class="input-group mb-3">
      <span class="input-group-text"><%= icon "search" %></span>
      <input type="text" name ="q" value="<%= @filter %>" class="form-control" placeholder="Search ingredients..."/>
    </div>
  </form>
  <table class="table table-hover">
    <thead>
      <tr>
          <th>Name</th>
          <th>Protein</th>
          <th>Fat</th>
          <th>CHO</th>
          <th>Energy</th>
      </tr>
    </thead>

    <tbody>
      <%= for ing = %ExDiet.Food.Ingredient{} <- @data do %>
        <tr phx-click="select_item" phx-value-id="<%= ing.id %>">
          <td><%= ing.name %></td>
          <td class="text-right"><%= format_number ing.protein %></td>
          <td class="text-right"><%= format_number ing.fat %></td>
          <td class="text-right"><%= format_number ing.carbonhydrate %></td>
          <td class="text-right"><%= format_number ing.energy, precision: 0 %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
  <div class="col-sm-12 col-xl-4">
      <div class="card">
        <div class="card-header">

          <%= if @changeset_update do %>
            Update ingredient
          <% else %>
            New ingredient
          <% end %>
        </div>
        <div class="card-body">
          <%= f = form_for @changeset, "#", [phx_submit: :save] %>
            <%= hidden_input f, :user_id, value: @current_user.id %>
            <%= hidden_input f, :id %>

            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <%= bs_text_input f, :name, required: true, class: "form-control" %>
              <%= error_tag f, :name %>
            </div>

            <div class="mb-3">
              <label for="protein" class="form-label">protein</label>
              <%= bs_number_input f, :protein, required: true, class: "form-control", step: "0.01" %>
              <%= error_tag f, :protein %>
            </div>

            <div class="mb-3">
              <label for="fat" class="form-label">fat</label>
              <%= bs_number_input f, :fat, required: true, class: "form-control", step: "0.01" %>
            </div>

            <div class="mb-3">
              <label for="carbonhydrate" class="form-label">carbonhydrate</label>
              <%= bs_number_input f, :carbonhydrate, required: true, class: "form-control", step: "0.01" %>
            </div>

            <div class="mb-3">
              <label for="energy" class="form-label">energy</label>
              <%= bs_number_input f, :energy, required: true, class: "form-control", step: "1" %>
            </div>

            <div class="btn-group">
              <%= if @changeset_update do %>
                <button class="btn btn-success" type="submit" name="action">Update Ingredient</button>
                <button phx-click="delete" type="button" class="btn btn-danger">Delete Ingredient</button>
              <% else %>
                <button class="btn btn-primary" type="submit" name="action">Create Ingredient</button>
              <% end %>
            </div>

            <button phx-click="reset_form" type="reset" class="btn btn-warning float-right">Reset Form</button>
          </form>
        </div>
      </div>
  </div>
</div>
