APP="ex_diet"

BUILD_HOST="localhost"
BUILD_USER="builder"
BUILD_AT="/tmp/edeliver/builds/ex_diet"

PRODUCTION_HOSTS="vscale"
PRODUCTION_USER="service"
DELIVER_TO="/srv/projects"

pre_erlang_clean_compile() {
  status "Preparing frontend app"
  __sync_remote "
    [ -f ~/.profile ] && source ~/.profile # load profile (optional)

    set -e

    cd '$BUILD_AT'

    mkdir -p priv/static

    npm --prefix ./frontend install
    npm --prefix ./frontend run build
  "
}

pre_erlang_get_and_update_deps() {
  status "Copying prod.secret.exs"

  local _prod_secret_path="/home/builder/config/prod.secret.exs"
  if [ "$TARGET_MIX_ENV" = "prod" ]; then
    __sync_remote "
      ln -sfn '$_prod_secret_path' '$BUILD_AT/config/prod.secret.exs'
    "
  fi
}
